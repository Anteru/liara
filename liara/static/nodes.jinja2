{% macro pretty_print_dict(d, indent=0) %}
    {% for key, value in d.items() %}
    {{ '  ' * indent }}<code>{{ key }}</code>:
    {% if value is mapping %}
        {{ pretty_print_dict(value, indent + 1) }}
    {% else %}
        {{ '  ' * (indent + 1) }}<code>{{ value|e }}</code><br>
    {% endif %}
    {% endfor %}
{% endmacro %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Liara - Resource view</title>
        <style>
            a.expand {
                text-decoration: none;

                &:hover {
                    background-color: #DDD;
                }
            }

            .children[aria-expanded="false"] {
                display: none;
            }

            .details[aria-expanded="false"] {
                display: none;
            }

            .details {
                border: 1px solid #CCC;
                border-radius: 0.1rem;
                padding: 0.25rem;

                ul {
                    list-style-type: none;
                    padding-left: 0;
                }

                .metadata {
                    display: block;
                    padding-left: 1rem;
                }
            }

            body {
                display: grid;
                grid-template-columns: 1fr 1fr;
                min-height: 100vh;
                margin: 0;
                padding: 0;
            }

            iframe {
                border: none;
                border-left: 1px solid #CCC;
                width: 100%;
                height: 100%;
            }
        </style>
    </head>
    <body>
        <section id="navigation">
        <ul>
        {%- for item in nodes recursive %}
            <li aria-expanded="false">
                {%- if item.children %}<a class="expand" href="#" onclick="toggleTree(event)" title="{{ item.children|length }} children">‚ûï</a>{%- endif -%}
                {% if item.data %}
                <a href="#" onclick="toggleDetails(event)" data-path="{{ item.data.path }}"><code>{{ item.name }}</code></a> (<a href="#" onclick="preview(event)" title="Preview node" data-path="{{ item.data.path }}">üëÅ</a>)
                <div class="details" aria-expanded="false">
                    <ul>
                        <li>Source file: <code>{{ item.data.src|default("Generated") }}</code></li>
                        <li>Node kind: {{ item.data.kind.name }}</li>
                        {%- if item.data.metadata -%}
                        <li>Metadata:
                            <div class="metadata">{{ pretty_print_dict(item.data.metadata) }}</div>
                        </li>
                        {%- endif -%}
                    </ul>
                </div>
                {% else %}
                <code>{{ item.name }}</code>{% if item.path|string == '/' %} (<a href="#" onclick="preview(event)" data-path="/">preview</a>){% endif %}
                {% endif %}
            {%- if item.children -%}
                <ul class="children" aria-expanded="false">{{ loop(item.children) }}</ul>
            {%- endif %}</li>
        {%- endfor %}
        </ul>
        </section>
        <section>
            <iframe id="preview">
            </iframe>
        </section>
    </body>
    <script>
    function preview(event) {
        const link = event.target.closest("a").getAttribute("data-path");
        document.getElementById("preview").src = link;
    }

    function toggleDetails(event) {
        const detailsElement = event.target.closest("li").querySelector(".details");
        if (detailsElement.getAttribute("aria-expanded") == "false") {
            detailsElement.setAttribute("aria-expanded", "true");
        } else {
            detailsElement.setAttribute("aria-expanded", "false");
        }

        event.preventDefault();
    }

    function toggleTree(event) {
        const childrenElement = event.target.closest("li").querySelector(".children");
        if (childrenElement.getAttribute("aria-expanded") == "false") {
            childrenElement.setAttribute("aria-expanded", "true");
            event.target.innerText = '‚ûñ';
        } else {
            childrenElement.setAttribute("aria-expanded", "false");
            event.target.innerText = '‚ûï';
        }

        event.preventDefault();

    }
    </script>
</html>